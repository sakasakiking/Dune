
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.RowSpan="2">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="0"
                                      Style="{DynamicResource DetailsScrollViewer}"
                                      d:DesignWidth="1280"
                                      d:DesignHeight="1280"
                                      d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                      x:Name="PART_ScrollViewHost">

                                <Grid MaxWidth="{DynamicResource GameOverviewWidth}" MinWidth="300" Margin="24,0,24,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Margin="0,0,0,40" Grid.ColumnSpan="2" Grid.Row="0">
                                        <Grid.Resources>
                                            <VisualBrush x:Key="ClonedVisualBrush" Visual="{Binding ElementName=PART_ImageBackground}" />
                                        </Grid.Resources>

                                        <Grid x:Name="HeroBanner">
                                            <Grid.OpacityMask>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Border Background="Black" CornerRadius="{DynamicResource ControlCornerRadiusLargeX}"
                                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Grid.OpacityMask>

                                            <!--Game background image-->
                                            <Grid ClipToBounds="True">
                                                <!--Blurred Layer-->
                                                <Rectangle Fill="{DynamicResource ClonedVisualBrush}">
                                                    <Rectangle.Effect>
                                                        <BlurEffect Radius="120" />
                                                    </Rectangle.Effect>
                                                </Rectangle>

                                                <!--Gradient Layer-->
                                                <Grid>
                                                    <Grid.OpacityMask>
                                                        <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="1.2" RadiusY="0.6">
                                                            <RadialGradientBrush.GradientStops>
                                                                <GradientStop Color="#00FFFFFF" Offset="0.4" />
                                                                <GradientStop Color="White" Offset="0.6" />
                                                            </RadialGradientBrush.GradientStops>
                                                        </RadialGradientBrush>
                                                    </Grid.OpacityMask>
                                                    <FadeImage x:Name="PART_ImageBackground" Stretch="UniformToFill" />
                                                </Grid>
                                            </Grid>
                                            <!--Game background image Ends-->

                                            <!--Game video-->
                                            <Grid x:Name="GameVideo">
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=VideoThumbnail, Path=IsChecked}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=ImageThumbnail, Path=IsChecked}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Rectangle>
                                                    <Rectangle.Fill>
                                                        <VisualBrush Visual="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl}" Stretch="UniformToFill" />
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                            </Grid>
                                            <!--Game video Ends-->

                                            <!--Daken Layer-->
                                            <Border Background="#99000000">
                                                <Border.OpacityMask>
                                                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                                        <GradientStop Color="White" Offset="0" />
                                                        <GradientStop Color="Transparent" Offset="0.5" />
                                                    </LinearGradientBrush>
                                                </Border.OpacityMask>
                                            </Border>

                                        </Grid>

                                        <!--Extra Logo-->
                                        <Grid Margin="40,40,0,40" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <Border x:Name="GameIcon" CornerRadius="{StaticResource ControlCornerRadius}">
                                                <Image Name="PART_ImageIcon" VerticalAlignment="Center" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="Fant"
                                                        MaxHeight="120" MaxWidth="120" />
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}"
                                                                    Value="False">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                    Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}"
                                                                    Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                            </Border>
                                        </Grid>
                                        <!--Extra Logo Ends-->

                                        <Grid VerticalAlignment="Bottom" Margin="40">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}"
                                                                    Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}"
                                                                    Value="True">
                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                    Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}"
                                                                    Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <!--Image Thumbnail-->
                                                <Grid Width="120" Height="68">
                                                    <Grid Margin="4">
                                                        <Grid.OpacityMask>
                                                            <VisualBrush>
                                                                <VisualBrush.Visual>
                                                                    <Border Background="Black" CornerRadius="{DynamicResource ControlCornerRadius}"
                                                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" />
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Grid.OpacityMask>
                                                        <Rectangle>
                                                            <Rectangle.Fill>
                                                                <VisualBrush Visual="{Binding ElementName=PART_ImageBackground}" Stretch="UniformToFill" />
                                                            </Rectangle.Fill>
                                                        </Rectangle>
                                                    </Grid>
                                                    <Border Background="Transparent" BorderBrush="White" BorderThickness="2" CornerRadius="{DynamicResource ControlCornerRadius}"
                                                            Visibility="{Binding ElementName=ImageThumbnail, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                    <RadioButton Name="ImageThumbnail" GroupName="ThumbnailControl"
                                                            Command="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.VideoPauseCommand}"
                                                            Style="{DynamicResource TransparentRadioButton}" />
                                                </Grid>
                                                <!--Video Thumbnail-->
                                                <Grid Margin="16,0,0,0" Width="120" Height="68">
                                                    <Grid Margin="4">
                                                        <Grid.OpacityMask>
                                                            <VisualBrush>
                                                                <VisualBrush.Visual>
                                                                    <Border Background="Black" CornerRadius="{DynamicResource ControlCornerRadius}"
                                                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" />
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Grid.OpacityMask>
                                                        <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl">
                                                            <ContentControl.Template>
                                                                <ControlTemplate TargetType="ContentControl">
                                                                    <Viewbox Stretch="UniformToFill" VerticalAlignment="Top">
                                                                        <Grid>
                                                                            <ContentPresenter />
                                                                            <Border Background="Transparent" />
                                                                        </Grid>
                                                                    </Viewbox>
                                                                </ControlTemplate>
                                                            </ContentControl.Template>
                                                        </ContentControl>
                                                    </Grid>
                                                    
                                                    <Border Background="#99000000" BorderBrush="#33FFFFFF" BorderThickness="1" Width="44" Height="44" CornerRadius="22"
                                                            HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Viewbox Name="ThumbnailPlay" Margin="13,12,11,12">
                                                            <TextBlock Text="&#xf5b0;" Foreground="White" Style="{StaticResource IconFontStyle}"/>
                                                        </Viewbox>
                                                    </Border>
                                                    <Border Background="Transparent" BorderBrush="White" BorderThickness="2" CornerRadius="{DynamicResource ControlCornerRadius}"
                                                            Visibility="{Binding ElementName=VideoThumbnail, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <RadioButton Name="VideoThumbnail" GroupName="ThumbnailControl" IsChecked="True"
                                                            Command="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.VideoPlayCommand}"
                                                            Style="{DynamicResource TransparentRadioButton}"/>
                                                </Grid>

                                            </StackPanel>

                                            <!--GameInfo-->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="24,0,24,0">
                                                <Button Name="PART_ButtonReleaseDate" Margin="0,0,4,0" Padding="0,0,0,0" BorderThickness="0" Background="{x:Null}"
                                                        Style="{DynamicResource PropertyItemSmallButton}" />

                                                <StackPanel Name="PART_ElemPlatform" Orientation="Horizontal">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Settings DetailsVisibility.Platforms}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Game.Platforms}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <TextBlock Text="·" Margin="4,0,4,0" Foreground="#99FFFFFF" FontWeight="Bold" />
                                                    <ItemsControl ItemsSource="{Binding Game.Platforms}" Margin="0,0,0,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}" Margin="4,0,4,0" Padding="0,0,0,0" BorderThickness="0" Background="{x:Null}"
                                                                        Style="{DynamicResource PropertyItemSmallButton}"
                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetPlatformFilterCommand}"
                                                                        CommandParameter="{Binding}" />
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>

                                                <Button Name="PART_ButtonSource" Margin="4,2,4,0" Padding="0" Style="{DynamicResource PropertyItemOutlinedButton}" />

                                                <StackPanel Name="PART_ElemGenres" Orientation="Horizontal">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Settings DetailsVisibility.Genres}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <ItemsControl ItemsSource="{Binding Game.Genres}" Margin="0,2,0,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}" Margin="4,0,4,0" Padding="0,0,0,0"
                                                                        Style="{DynamicResource PropertyItemOutlinedButton}"
                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetPlatformFilterCommand}"
                                                                        CommandParameter="{Binding}" />
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                                
                                            </StackPanel>

                                            <!--Action Buttons-->
                                            <StackPanel Grid.Column="0">
                                                <Grid Width="200" HorizontalAlignment="right" VerticalAlignment="Center">
                                                    <Button Name="PART_ButtonPlayAction" Style="{DynamicResource DetailPlayButton}" />
                                                    <Button Name="PART_ButtonContextAction" Style="{DynamicResource DetailPlayButton}" />
                                                    <Button Name="PART_ButtonMoreActions" HorizontalAlignment="Right" Content="&#xe228;"
                                                            Style="{DynamicResource DetailPlayButtonRightPart}" />
                                                </Grid>
                                                <Button x:Name="PART_ButtonEditGame" Width="200" Margin="0,8,0,0" Focusable="False" Content="{DynamicResource LOCEditGame}"
                                                        Style="{StaticResource DetailEditButton}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                            </StackPanel>

                                        </Grid>


                                        <StackPanel Name="VideoControlButton" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,120">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}" Value="True" />
                                                                <Condition Binding="{Binding ElementName=VideoThumbnail, Path=IsChecked}" Value="True" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <ToggleButton HorizontalAlignment="Left" x:Name="TrailerPauseButton" Tag="&#xe103;"
                                                    Command="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.VideoPauseCommand, FallbackValue={x:Null}}"
                                                    Visibility="{Binding ElementName=TrailerPlayButton, Path=IsEnabled, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" Style="{DynamicResource IconRoundedToggleButton}">

                                            </ToggleButton>
                                            <ToggleButton HorizontalAlignment="Left" x:Name="TrailerPlayButton" Tag="&#xe102;"
                                                    Command="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.VideoPlayCommand, FallbackValue={x:Null}}"
                                                    Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Style="{DynamicResource IconRoundedToggleButton}">

                                            </ToggleButton>

                                            <CheckBox Margin="8,0,0,0"
                                                    IsChecked="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl, Path=Content.IsPlayerMuted, Mode=TwoWay, FallbackValue={StaticResource True}}">
                                                <CheckBox.Template>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <Border Name="Border" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#33000000" Width="36" Height="36" CornerRadius="18">
                                                            <TextBlock x:Name="NotMuted" Text="&#xe198;" Style="{StaticResource IconFontStyle}" Margin="8" Foreground="White" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Text" TargetName="NotMuted" Value="&#xe994;" />
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#66000000" TargetName="Border"/>
                                                                <Setter Property="BorderBrush" Value="#66FFFFFF" TargetName="Border" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </CheckBox.Template>
                                            </CheckBox>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.ColumnSpan="2" Grid.Row="1" Name="PART_ElemLinks" Margin="0,0,0,40">
                                        <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" Style="{DynamicResource DetailViewCardBorder}"
                                                Margin="0,0,0,0" />
                                        <ItemsControl ItemsSource="{Binding Game.Links}" Margin="16,16,16,8" Visibility="{Binding ElementName=PART_ElemLinks, Path=Visibility}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type Link}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="{Binding Name}" Style="{StaticResource PropertyItemLinkButton}" ToolTip="{Binding Url}"
                                                                Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.OpenLinkCommand}"
                                                                CommandParameter="{Binding}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                    </Grid>

                                    <!--Right Side-->
                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="0" Width="{DynamicResource GameDetailInfoWidth}">

                                        <!--Details Panel-->
                                        <StackPanel Margin="0,0,0,32">
                                            <StackPanel.Resources>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                    <Setter Property="Margin" Value="0,8,0,0" />
                                                </Style>
                                                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                    <Setter Property="Margin" Value="0,12,12,0" />
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                                    <Setter Property="Opacity" Value="0.4" />
                                                    <Setter Property="MaxWidth" Value="140" />
                                                    <Setter Property="FontSize" Value="{DynamicResource FontSize}" />
                                                </Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}">
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                    <Setter Property="Margin" Value="0,4,0,0" />
                                                </Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                    <Setter Property="Margin" Value="0,0,0,0" />
                                                </Style>
                                            </StackPanel.Resources>

                                            <Grid>
                                                <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" Style="{DynamicResource DetailViewCardBorder}" />
                                                <StackPanel Margin="20,16,20,16">
                                                    <StackPanel>
                                                        <TextBlock Text="{DynamicResource LOCGameDetails}" FontWeight="Bold" />
                                                        <GridEx x:Name="GDGrid" ColumnCount="2" StarColumns="1" RowCount="25" AutoLayoutColumns="2">

                                                            <Label Name="PART_ElemSeries" Content="{DynamicResource LOCSeriesLabel}" />
                                                            <ItemsControl Name="PART_ItemsSeries" />

                                                            <Label Name="PART_ElemDevelopers" Content="{DynamicResource LOCDeveloperLabel}" />
                                                            <ItemsControl Name="PART_ItemsDevelopers" />

                                                            <Label Name="PART_ElemPublishers" Content="{DynamicResource LOCPublisherLabel}" />
                                                            <ItemsControl Name="PART_ItemsPublishers" />

                                                            <Label Name="PART_ElemAgeRating" Content="{DynamicResource LOCAgeRatingLabel}" />
                                                            <ItemsControl Name="PART_ItemsAgeRatings" />

                                                            <Label Name="PART_ElemRegion" Content="{DynamicResource LOCRegionLabel}" />
                                                            <ItemsControl Name="PART_ItemsRegions" />

                                                            <Label Name="PART_ElemAdded" Content="{DynamicResource LOCDateAddedLabel}" />
                                                            <TextBlock Name="PART_TextAdded" Margin="0,12,0,0" />

                                                            <Label Name="PART_ElemRecentActivity" Content="{DynamicResource LOCRecentActivityLabel}" />
                                                            <TextBlock Name="PART_TextRecentActivity" Margin="0,12,0,0" />

                                                            <Label Name="PART_ElemCategories" Content="{DynamicResource LOCGameCategoriesTitle}" />
                                                            <ItemsControl Name="PART_ItemsCategories" />

                                                            <Label Name="PART_ElemLibrary" Content="{DynamicResource LOCGameProviderTitle}" />
                                                            <Button Name="PART_ButtonLibrary" Margin="0,12,0,0" />

                                                        </GridEx>
                                                    </StackPanel>
                                                    <!--InstallDirectory-->
                                                    <StackPanel Name="PART_ElemInstallDirectory">
                                                        <Separator Background="{StaticResource PanelSeparatorBrush}" Height="1" Margin="0,16,0,16" />
                                                        <TextBlock Text="{DynamicResource LOCGameInstallDirTitle}" FontWeight="Bold" />
                                                        <Button Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" Margin="0,8,0,4" />
                                                        <TextBlock Name="PART_TextInstallSize" FontSize="{StaticResource FontSizeSmall}" Opacity="0.4"/>
                                                    </StackPanel>
                                                    <!--Features-->
                                                    <StackPanel Name="PART_ElemFeatures">
                                                        <Separator Background="{StaticResource PanelSeparatorBrush}" Height="1" Margin="0,16,0,16" />
                                                        <TextBlock Text="{DynamicResource LOCFeaturesLabel}" FontWeight="Bold" />

                                                        <StackPanel Margin="0,8,0,0">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Settings DetailsVisibility.Features}" Value="False">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Game.Features}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <ItemsControl ItemsSource="{Binding Game.Features}" Margin="0,0,0,0">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal" />
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Content="{Binding Name}" Margin="0,2,4,2" Style="{DynamicResource PropertyItemTagButton}"
                                                                                Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}"
                                                                                CommandParameter="{Binding}" />
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>

                                                    </StackPanel>
                                                    <!--Tags-->
                                                    <StackPanel Name="PART_ElemTags">
                                                        <Separator Background="{StaticResource PanelSeparatorBrush}" Height="1" Margin="0,16,0,16" />
                                                        <TextBlock Text="{DynamicResource LOCTagsLabel}" FontWeight="Bold" />

                                                        <StackPanel Margin="0,8,0,0">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Settings DetailsVisibility.Tags}" Value="False">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Game.Tags}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <ItemsControl ItemsSource="{Binding Game.Tags}" Margin="0,0,0,0">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal" />
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Button Content="{Binding Name}" Margin="0,2,4,2" Style="{DynamicResource PropertyItemTagButton}"
                                                                                Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}"
                                                                                CommandParameter="{Binding}" />
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                        </StackPanel>

                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>

                                        </StackPanel>
                                        <!--Details Panel Ends-->


                                        

                                        <!--Ratings-->
                                        <StackPanel Margin="0,0,0,32">

                                            <Border CornerRadius="{DynamicResource ControlCornerRadius}" 
                                                    Style="{DynamicResource DetailViewCardBorder}" Margin="0,0,0,0">

                                                <Grid Margin="16,12,16,12">
                                                    <Grid.Resources>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontSize" Value="{StaticResource FontSizeSmaller}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource IdleBrush}"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontSize" Value="{StaticResource FontSizeLarge20}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource IdleBrush}"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </Grid.Resources>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <!--<Label Name="PART_ElemCommunityScore" Content="{DynamicResource LOCCommunityScore}"/>-->
                                                        <Label Content="{DynamicResource LOCCommunityScore}"/>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                                            <TextBlock Text="&#xe00a;" Style="{StaticResource IconFontStyle}" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Game.CommunityScore, TargetNullValue='- -', FallbackValue='- -'}"
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                            <!--<TextBlock Name="PART_TextCommunityScore" VerticalAlignment="Center" />-->
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1">
                                                        <!--<Label Name="PART_ElemCriticScore" Content="{DynamicResource LOCCriticScore}" />-->
                                                        <Label Content="{DynamicResource LOCCriticScore}" />
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="&#xe00a;" Style="{StaticResource IconFontStyle}" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Game.CriticScore, TargetNullValue='- -', FallbackValue='- -'}"
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                            <!--<TextBlock Name="PART_TextCriticScore" VerticalAlignment="Center" />-->
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2">
                                                        <!--<Label Name="PART_ElemUserScore" Content="{DynamicResource LOCUserScore}" />-->
                                                        <Label Content="{DynamicResource LOCUserScore}" />
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="&#xe00a;" Style="{StaticResource IconFontStyle}" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Game.UserScore, TargetNullValue='- -', FallbackValue='- -'}" 
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                            <!--<TextBlock Name="PART_TextUserScore" VerticalAlignment="Center" />-->
                                                        </StackPanel>
                                                    </StackPanel>

                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                        <!--Ratings Ends-->
                

                                    </StackPanel>
                                    <!--Right Side Ends-->

                                    <!--Left Side-->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,40,0">

                                        <StackPanel Margin="0,0,0,40">
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.Resources>
                                                    <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                        <Setter Property="Margin" Value="0,0,0,0" />
                                                        <Setter Property="VerticalAlignment" Value="Top" />
                                                        <Setter Property="FontSize" Value="{DynamicResource FontSize}" />
                                                        <Setter Property="Opacity" Value="0.4" />
                                                    </Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="RenderOptions.BitmapScalingMode" Value="Fant" />
                                                        <Setter Property="Height" Value="40" />
                                                        <Setter Property="Margin" Value="0,0,10,0" />
                                                    </Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                        <Setter Property="FontWeight" Value="Medium" />
                                                        <Setter Property="Margin" Value="0,16,0,2" />
                                                        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge18}" />
                                                    </Style>
                                                </Grid.Resources>
                                                <!--Last Played-->
                                                <Grid Grid.Column="0" Margin="0,0,16,0">
                                                    <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" Style="{DynamicResource DetailViewCardBorder}" />
                                                    <DockPanel Margin="24" Visibility="{Binding Visibility, ElementName=PART_ElemLastPlayed, Mode=OneWay}">
                                                        <TextBlock Text="&#xe163;" FontSize="{DynamicResource FontSizeLarge24}" DockPanel.Dock="Top" Margin="0,0,0,0"
                                                                HorizontalAlignment="Left" Style="{DynamicResource IconFontStyle}" />
                                                        <TextBlock Name="PART_TextLastActivity" DockPanel.Dock="Top" />
                                                        <Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}" DockPanel.Dock="Top" />
                                                    </DockPanel>

                                                </Grid>
                                                <!--Time Played-->
                                                <Grid Grid.Column="1" Margin="0,0,16,0">
                                                    <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" Style="{DynamicResource DetailViewCardBorder}" />
                                                    <DockPanel Margin="24" Visibility="{Binding Visibility, ElementName=PART_ElemPlayTime, Mode=OneWay}">
                                                        <TextBlock Text="&#xed5a;" FontSize="{DynamicResource FontSizeLarge24}" DockPanel.Dock="Top" Margin="0,0,0,0"
                                                                HorizontalAlignment="Left" Style="{DynamicResource IconFontStyle}" />
                                                        <TextBlock Name="PART_TextPlayTime" DockPanel.Dock="Top" />
                                                        <Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" DockPanel.Dock="Top" />
                                                    </DockPanel>
                                                </Grid>
                                                <!--Completion Status-->
                                                <Grid Grid.Column="2" Margin="0,0,16,0">
                                                    <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" Style="{DynamicResource DetailViewCardBorder}" />
                                                    <DockPanel Margin="24" Visibility="{Binding Visibility, ElementName=PART_ElemCompletionStatus, Mode=OneWay}">
                                                        <TextBlock Text="&#xe129;" FontSize="{DynamicResource FontSizeLarge24}" DockPanel.Dock="Top" Margin="0,0,0,0"
                                                                HorizontalAlignment="Left" Style="{DynamicResource IconFontStyle}" />
                                                        <Button Name="PART_ButtonCompletionStatus" DockPanel.Dock="Top" FontWeight="Medium" Margin="0,16,0,2"
                                                                Style="{DynamicResource PropertyItemButton}" FontSize="{DynamicResource FontSizeLarge18}" />
                                                        <Label Name="PART_ElemCompletionStatus" Content="{DynamicResource LOCCompletionStatus}" DockPanel.Dock="Top" />
                                                    </DockPanel>

                                                </Grid>
                                                <!--Achievements-->
                                                <Grid Grid.Column="3" Margin="0,0,0,0">
                                                    <Border  CornerRadius="{DynamicResource ControlCornerRadiusLarge}" Style="{DynamicResource DetailViewCardBorder}" />
                                                    <DockPanel Margin="24">
                                                        <TextBlock Text="&#xf272;" FontSize="{DynamicResource FontSizeLarge24}" DockPanel.Dock="Top" Margin="0,0,0,0"
                                                                HorizontalAlignment="Left" Style="{DynamicResource IconFontStyle}" />
                                                        <StackPanel Name="PART_SuccessStory" DockPanel.Dock="Top">
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue='-'}" />
                                                                <TextBlock Text="/" />
                                                                <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue='-'}" />
                                                                <!--<ProgressBar x:Name="progressBar" FontSize="10" Margin="4,0,0,0" VerticalAlignment="Center"
                                                                        Maximum="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue=0}"
                                                                        Value="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue=0}" HorizontalAlignment="Left"
                                                                        Background="{DynamicResource ControlHoverBackgroundBrush }" Foreground="{DynamicResource GlyphBrush}"
                                                                        Width="60" Height="10" Style="{DynamicResource RoundedProgressBar}">
                                                                    <ProgressBar.Resources>
                                                                        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
                                                                            <Setter Property="Background" Value="{DynamicResource NormalBrushDark}" />
                                                                            <Setter Property="BorderThickness" Value="{DynamicResource ControlBorderThickness}" />
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                                                        <Border BorderThickness="{TemplateBinding BorderThickness}"
                                                                                                CornerRadius="{DynamicResource ControlCornerRadius}">
                                                                                            <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                                                                                <Rectangle Fill="{TemplateBinding Background}" RadiusY="4" RadiusX="4" />
                                                                                                <Rectangle x:Name="PART_Track" Margin="0" RadiusY="4" RadiusX="4" />
                                                                                                <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left"
                                                                                                        VerticalAlignment="Stretch">
                                                                                                    <Grid>
                                                                                                        <Rectangle Fill="{TemplateBinding Foreground}" RadiusY="4" RadiusX="4" />
                                                                                                    </Grid>
                                                                                                </Decorator>
                                                                                            </Grid>
                                                                                        </Border>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </ProgressBar.Resources>
                                                                </ProgressBar>-->
                                                            </StackPanel>
                                                            <Label Content="{DynamicResource LOCSuccessStoryAchievements}" />
                                                        </StackPanel>
                                                    </DockPanel>

                                                </Grid>

                                            </Grid>
                                        </StackPanel>

                                        <!--Tab Table-->
                                        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch">

                                            <TabControl Margin="0,0,0,16" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                                        Style="{StaticResource DetailViewTabControl}">
                                                <!--Tab Overview-->
                                                <TabItem Header="{DynamicResource LOCOverviewLabel}" x:Name="DescriptionTab" FontSize="16" >

                                                    <StackPanel Margin="0,24,0,0">

                                                        <StackPanel x:Name="DescriptionContent" Margin="0,0,0,0" Tag="{DynamicResource ThemeDarkStyle}">
                                                            <StackPanel Name="PART_ElemDescription">
                                                                <HtmlTextView Name="PART_HtmlDescription" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                                                                        HtmlFontSize="{DynamicResource FontSize}" HtmlFontFamily="{DynamicResource FontFamily}"
                                                                        LinkForeground="{DynamicResource AccentSelectedColor}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                                                    <HtmlTextView.Style>
                                                                        <Style TargetType="HtmlTextView">
                                                                            <Setter Property="HtmlForeground" Value="{DynamicResource TextColor}" />
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Tag, ElementName=DescriptionContent}" Value="True">
                                                                                    <Setter Property="HtmlForeground" Value="{DynamicResource TextColorDark}" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </HtmlTextView.Style>
                                                                </HtmlTextView>
                                                            </StackPanel>
                                                        </StackPanel>

                                                        <!--Game relations-->
                                                        <StackPanel Margin="0,24,0,0" Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">

                                                            <TextBlock Text="{DynamicResource LOCGameRelations_RelatedGamesLabel}" Margin="0,0,0,16"
                                                                       FontSize="{DynamicResource FontSizeLarge20}" FontWeight="Bold" Foreground="{DynamicResource SelectedBrush}"/>

                                                            <TextBlock x:Name="GameRelationsVisibilityProxy" Visibility="Collapsed">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Tag" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SimilarGamesControl, Path=Visibility}" Value="Visible">
                                                                                <Setter Property="Tag" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameSeriesControl, Path=Visibility}" Value="Visible">
                                                                                <Setter Property="Tag" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameDeveloperControl, Path=Visibility}" Value="Visible">
                                                                                <Setter Property="Tag" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SamePublisherControl, Path=Visibility}" Value="Visible">
                                                                                <Setter Property="Tag" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <Expander x:Name="Panel_GameRelations_SimilarGamesControl"
                                  Header="{DynamicResource LOCGameRelations_SimilarGamesLabel}"
                                  IsExpanded="True" Margin="0,8,0,0"
                                  Visibility="{PluginSettings Plugin=GameRelations, Path=SimilarGamesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                <ContentControl x:Name="GameRelations_SimilarGamesControl" Margin="0,16,0,0" />
                                                            </Expander>

                                                            <Expander x:Name="Panel_GameRelations_SameSeriesControl"
                                  Header="{DynamicResource LOCGameRelations_SameSeriesLabel}"
                                  IsExpanded="True" Margin="0,8,0,0"
                                  Visibility="{PluginSettings Plugin=GameRelations, Path=SameSeriesControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                <ContentControl x:Name="GameRelations_SameSeriesControl" Margin="0,16,0,0" />
                                                            </Expander>

                                                            <Expander x:Name="Panel_GameRelations_SameDeveloperControl"
                                  Header="{DynamicResource LOCGameRelations_SameDeveloperLabel}"
                                  IsExpanded="True" Margin="0,8,0,0"
                                  Visibility="{PluginSettings Plugin=GameRelations, Path=SameDeveloperControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                <ContentControl x:Name="GameRelations_SameDeveloperControl" Margin="0,16,0,0" />
                                                            </Expander>

                                                            <Expander x:Name="Panel_GameRelations_SamePublisherControl"
                                  Header="{DynamicResource LOCGameRelations_SamePublisherLabel}"
                                  IsExpanded="True" Margin="0,8,0,0"
                                  Visibility="{PluginSettings Plugin=GameRelations, Path=SamePublisherControlSettings.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                                <ContentControl x:Name="GameRelations_SamePublisherControl" Margin="0,16,0,0" />
                                                            </Expander>
                                                        </StackPanel>

                                                    </StackPanel>
                                                </TabItem>
                                                <!--Tab Overview Ends-->

                                                <!--Tab Notes-->
                                                <TabItem Header="{DynamicResource LOCNotesLabel}" FontSize="16"
                                                         Visibility="{Binding ElementName=NotesVisibilityProxy, Path=Tag}">
                                                    <StackPanel Margin="0,24,0,0">
                                                        <TextBlock x:Name="NotesVisibilityProxy" Visibility="Collapsed">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Tag" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=PART_TextNotes, Path=Visibility}" Value="Visible">
                                                                            <Setter Property="Tag" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <TextBox Name="PART_TextNotes" IsReadOnly="True" BorderThickness="0"
                                                                 AcceptsReturn="True" TextWrapping="Wrap"
                                                                 Margin="-1,5,-1,5" Padding="0" Background="Transparent" FontWeight="Normal"/>
                                                    </StackPanel>
                                                </TabItem>
                                                <!--Tab Notes Ends-->

                                                <TabItem Header="{DynamicResource LOCSuccessStoryAchievements}"
                         Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel Margin="0,24,0,0">
                                                        <ContentControl x:Name="SuccessStory_PluginCompactUnlocked" Margin="0,0,0,24" />
                                                        <ContentControl x:Name="SuccessStory_PluginCompactLocked" Margin="0,0,0,24" />
                                                        <ContentControl x:Name="SuccessStory_PluginUserStats" Margin="0,0,0,24" />
                                                        <ContentControl x:Name="SuccessStory_PluginList" Margin="0,0,0,24" MinHeight="300" />
                                                        <ContentControl x:Name="SuccessStory_PluginChart" Margin="0,0,0,24" />
                                                    </StackPanel>
                                                </TabItem>

                                                <TabItem Header="{DynamicResource LOCSsvTitle}"
                         Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel Orientation="Vertical" Background="{TemplateBinding Background}" Margin="0,24,0,0">
                                                        <ContentControl x:Name="ScreenshotsVisualizer_PluginListScreenshotsVertical" Margin="0,0,0,0" Height="500"/>
                                                        <ContentControl x:Name="ScreenshotsVisualizer_PluginSinglePicture" />
                                                        <ContentControl x:Name="ScreenshotsVisualizer_PluginListScreenshots" />
                                                    </StackPanel>

                                                </TabItem>

                                            </TabControl>
                                        </StackPanel>
                                        <!--Tab Table Ends-->

                                    </StackPanel>
                                    <!--Left Side Ends-->
                                    
                                </Grid>
                            </ScrollViewer>
                        </Grid>

                    </Grid>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>