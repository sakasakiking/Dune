
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.RowSpan="2">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="0"
                                      Style="{DynamicResource DetailsScrollViewer}"
                                      d:DesignWidth="1280"
                                      d:DesignHeight="1280"
                                      d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                      x:Name="PART_ScrollViewHost">

                                <Grid MaxWidth="{DynamicResource DetailsViewGameOverviewMaxWidth}" MinWidth="300" Margin="24,0,24,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="300"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <!--<RowDefinition Height="{Settings CalculatedGameDetailsIndentation}"/>-->
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.ColumnSpan="2" Grid.Row="0" CornerRadius="{DynamicResource ControlCornerRadiusLargeX}"
                                            Background="{DynamicResource CardBackgroundBrush}" Padding="40">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6*"/>
                                                <ColumnDefinition Width="4*"/>
                                            </Grid.ColumnDefinitions>

                                            <FadeImage x:Name="PART_ImageBackground" Grid.Column="0" Stretch="UniformToFill">
                                                <FadeImage.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Border Background="Black" CornerRadius="{DynamicResource ControlCornerRadiusLarge}"
                                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=FadeImage}}"
                                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=FadeImage}}" />
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </FadeImage.OpacityMask>
                                            </FadeImage>

                                            <DockPanel Grid.Column="1" Margin="40,0,0,0">

                                                <TextBlock Name="PART_TextDisplayName" DockPanel.Dock="Top"
                                                           FontFamily="{DynamicResource FontFamily}" FontSize="{DynamicResource FontSizeLarge28}" FontWeight="Bold"
                                                           TextWrapping="Wrap" Foreground="{DynamicResource SelectedBrush}" />

                                                <!--Aciton Buttons-->
                                                <DockPanel DockPanel.Dock="Bottom" Margin="0,32,0,0">
                                                    <Button x:Name="PART_ButtonEditGame" DockPanel.Dock="Right" Margin="8,0,0,0" Width="56" Focusable="False" Content="&#xe115;"
                                                            Style="{StaticResource PlayIconButton}" />

                                                    <Grid>
                                                        <Button Name="PART_ButtonPlayAction" Style="{DynamicResource DetailPlayButton}" />

                                                        <Button Name="PART_ButtonContextAction" Style="{DynamicResource DetailPlayButton}" />

                                                        <Button Name="PART_ButtonMoreActions" HorizontalAlignment="Right" Content="&#xe228;"
                                                                Style="{DynamicResource DetailPlayButtonRightPart}" />
                                                    </Grid>
                                                </DockPanel>
                                                <!--Aciton Buttons Ends-->

                                                <StackPanel Margin="0,24,0,0" Background="#29FFCC00">
                                                    <StackPanel.Resources>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontSize" Value="{DynamicResource FontSize}" />
                                                            <Setter Property="Foreground" Value="{DynamicResource IdleBrush}" />
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                                            <Setter Property="Margin" Value="0,0,8,0" />
                                                            <Setter Property="Padding" Value="0" />
                                                        </Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource PropertyItemTagButton}">
                                                            <Setter Property="Padding" Value="16,8,16,8" />
                                                        </Style>
                                                    </StackPanel.Resources>

                                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#29FFCC00">
                                                        <Label Name="PART_ElemSource" Content="{DynamicResource LOCSourceLabel}" />
                                                        <Button Name="PART_ButtonSource" />
                                                    </StackPanel>

                                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,16,0,0">
                                                        <Label Name="PART_ElemReleaseDate" Content="{DynamicResource LOCGameReleaseDateTitle}" />
                                                        <Button Name="PART_ButtonReleaseDate" VerticalAlignment="Center" />
                                                    </StackPanel>

                                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,16,0,0">
                                                        <Label Name="PART_ElemVersion" Content="{DynamicResource LOCVersionLabel}" />
                                                        <Button Name="PART_ButtonVersion" VerticalAlignment="Center" />
                                                    </StackPanel>

                                                    <!--<Label Name="PART_ElemPlatform" Content="{DynamicResource LOCPlatformTitle}" />-->
                                                    <!--<ItemsControl Name="PART_ItemsPlatforms" />-->
                                                    <StackPanel Name="PART_ElemPlatforms" Margin="0,3,0,3" VerticalAlignment="Top" HorizontalAlignment="Left">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Settings DetailsVisibility.Platforms}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Game.Platforms}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>

                                                        <ItemsControl ItemsSource="{Binding Game.Platforms}" Margin="0,0,0,0">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button Content="{Binding Name}" Style="{DynamicResource PropertyItemSmallButton}" Margin="0,2,8,2"
                                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}"
                                                                            CommandParameter="{Binding}" />
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </StackPanel>
                                                       
                                                

                                            </DockPanel>
                                        </Grid>
                                        <!--<DockPanel Background="red">

                                            ImageCover
                                            <Border HorizontalAlignment="Center" DockPanel.Dock="Left">
                                                <Image Name="PART_ImageCover" VerticalAlignment="Bottom" Margin="0,0,0,-40" HorizontalAlignment="Center" Width="160"
                                                        StretchDirection="Both" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant">
                                                    <Image.OpacityMask>
                                                        <VisualBrush>
                                                            <VisualBrush.Visual>
                                                                <Border Background="Black" CornerRadius="8"
                                                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}"
                                                                        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}" />
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Image.OpacityMask>
                                                </Image>
                                            </Border>
                                            ImageCover Ends

                                            

                                                    

                                            


                                        </DockPanel>-->
                                    </Border>
                                    
                                    <!--Right Side-->
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0">
                                        
                                        <!--Extra Logo-->
                                        <Grid Height="260" Margin="0,0,0,40">
                                            <Border x:Name="GameIcon" CornerRadius="{StaticResource ControlCornerRadius}">
                                                <Image Name="PART_ImageIcon" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       RenderOptions.BitmapScalingMode="Fant" MaxHeight="120" MaxWidth="120"/>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false" >
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                    Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false" >
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl"/>
                                            </Border>
                                        </Grid>
                                        <!--Extra Logo Ends-->
                                            
                                        

                                        <!--HowLongToBeat-->
                                        <StackPanel Margin="0,0,0,32" Visibility="{PluginSettings Plugin=HowLongToBeat, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="{DynamicResource LOCHowLongToBeat}" Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold" FontSize="14"/>

                                                <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" 
                                                        Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">

                                                    <StackPanel Margin="0,0,0,0">
                                                        <StackPanel.Resources>
                                                            <Style TargetType="Label" x:Key="HltbGridLabelStyle">
                                                                <Setter Property="FontSize" Value="{DynamicResource FontSizeSmaller}"/>
                                                                <Setter Property="Foreground" Value="{DynamicResource IdleBrush}"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                            </Style>
                                                            <Style TargetType="Border" x:Key="HltbBorderStyle">
                                                                <Setter Property="Background" Value="{DynamicResource IdleBrush}"/>
                                                                <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}"/>
                                                            </Style>
                                                            <Style TargetType="TextBlock" x:Key="HltbGridTextStyle" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                                <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
                                                                <Setter Property="Margin" Value="8,8,8,8" />
                                                                <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Value="--">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Resources>

                                                        <Grid Margin="16,12,16,16">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>



                                                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                                                <Label Content="{DynamicResource LOCHowLongToBeatMainStory}"
                                                                       Style="{DynamicResource HltbGridLabelStyle}"
                                                                       Visibility="{Binding ElementName=MainStoryFormat, Path=Visibility}" />
                                                                <Border Style="{DynamicResource HltbBorderStyle}">
                                                                    <TextBlock Name="MainStoryFormat" Style="{DynamicResource HltbGridTextStyle}"
                                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=MainStoryFormat, FallbackValue='--'}"/>
                                                                </Border>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="1" Margin="0,0,12,0">

                                                                <Label Content="{DynamicResource LOCHowLongToBeatMainExtra}"
                                                                       Style="{DynamicResource HltbGridLabelStyle}"
                                                                       Visibility="{Binding ElementName=MainExtraFormat, Path=Visibility}" />
                                                                <Border Style="{DynamicResource HltbBorderStyle}">
                                                                    <TextBlock Name="MainExtraFormat"
                                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=MainExtraFormat, FallbackValue='--'}"/>
                                                                </Border>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="2" Margin="0,0,0,0">

                                                                <Label Content="{DynamicResource LOCHowLongToBeatCompletionist}"
                                                                       Style="{DynamicResource HltbGridLabelStyle}"
                                                                       Visibility="{Binding ElementName=CompletionistFormat, Path=Visibility}" />
                                                                <Border Style="{DynamicResource HltbBorderStyle}">
                                                                    <TextBlock Name="CompletionistFormat"
                                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=CompletionistFormat, FallbackValue='--'}"/>
                                                                </Border>
                                                            </StackPanel>

                                                        </Grid>

                                                        <Border Background="{DynamicResource GlobalBackgroundBrush}" CornerRadius="0,0,16,16">
                                                            <!--<DockPanel Margin="16,16,16,16">
                                                                <TextBlock Text="{DynamicResource LOCTimePlayed}" Foreground="{DynamicResource IdleBrush}" DockPanel.Dock="Left"/>
                                                                <TextBlock Name="PART_TextPlayTime" DockPanel.Dock="Right" TextAlignment="Right" FontWeight="Bold"/>
                                                            </DockPanel>-->
                                                        </Border>

                                                    </StackPanel>

                                                </Border>
                                            </StackPanel>
                                        <!--HowLongToBeat Ends-->                                    

                                        <!--Details Panel-->
                                        <StackPanel Margin="0,0,0,32">
                                            <StackPanel.Resources>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                                    <Setter Property="Margin" Value="0,8,0,0" />
                                                </Style>
                                                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                    <Setter Property="Margin" Value="0,12,12,0" />
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource PromptBrush}" />
                                                    <Setter Property="MaxWidth" Value="140"/>
                                                </Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}">
                                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                                    <Setter Property="Margin" Value="0,4,0,0" />
                                                </Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" >
                                                            <Setter Property="Margin" Value="0,8,0,0" />
                                                        </Style>
                                            </StackPanel.Resources>
                                            <TextBlock Text="{DynamicResource LOCGameDetails}" Margin="0,0,0,0"
                                                       Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold" FontSize="14"/>

                                            <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" 
                                                    Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">
                                                <GridEx x:Name="GDGrid" Margin="16,4,16,16" ColumnCount="2" StarColumns="1" 
                                                        RowCount="25" AutoLayoutColumns="2">

                                                    <Label Name="PART_ElemSeries" Content="{DynamicResource LOCSeriesLabel}" />
                                                    <ItemsControl Name="PART_ItemsSeries" />
                                                    
                                                    <Label Name="PART_ElemGenres" Content="{DynamicResource LOCGenreLabel}" />
                                                    <ItemsControl Name="PART_ItemsGenres" />

                                                    <!--<Label Name="PART_ElemTags" Content="{DynamicResource LOCTagsLabel}" />
                                                    <ItemsControl Name="PART_ItemsTags" />-->

                                                    <Label Name="PART_ElemDevelopers" Content="{DynamicResource LOCDeveloperLabel}" />
                                                    <ItemsControl Name="PART_ItemsDevelopers" />

                                                    <Label Name="PART_ElemPublishers" Content="{DynamicResource LOCPublisherLabel}" />
                                                    <ItemsControl Name="PART_ItemsPublishers" />

                                                    <Label Name="PART_ElemAgeRating" Content="{DynamicResource LOCAgeRatingLabel}" />
                                                    <ItemsControl Name="PART_ItemsAgeRatings" />

                                                    <Label Name="PART_ElemRegion" Content="{DynamicResource LOCRegionLabel}" />
                                                    <ItemsControl Name="PART_ItemsRegions" />


                                                    <Label Name="PART_ElemAdded" Content="{DynamicResource LOCDateAddedLabel}" />
                                                    <TextBlock Name="PART_TextAdded"  Margin="0,12,0,0" />

                                                    <Label Name="PART_ElemRecentActivity" Content="{DynamicResource LOCRecentActivityLabel}" />
                                                    <TextBlock Name="PART_TextRecentActivity" Margin="0,12,0,0"/>

                                                    <!--<Label Name="PART_ElemSource" Content="{DynamicResource LOCSourceLabel}" />
                                                    <Button Name="PART_ButtonSource"  Margin="0,12,0,0"/>-->

                                                    <Label Name="PART_ElemCategories" Content="{DynamicResource LOCGameCategoriesTitle}" />
                                                    <ItemsControl Name="PART_ItemsCategories" />

                                                    <Label Name="PART_ElemLibrary" Content="{DynamicResource LOCGameProviderTitle}" />
                                                    <Button Name="PART_ButtonLibrary" Margin="0,12,0,0"/>

                                                    <StackPanel Name="PART_ElemInstallDirectory" Grid.ColumnSpan="2">
                                                        <Separator Background="{StaticResource PanelSeparatorBrush}" Height="1" Margin="0,16,0,4"/>
                                                        <Label  Content="{DynamicResource LOCGameInstallDirTitle}" />
                                                        <Button Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" />
                                                        <TextBlock Name="PART_TextInstallSize" Foreground="{StaticResource PromptBrush}" FontSize="{StaticResource FontSizeSmall}" />
                                                    </StackPanel>
                                                   
       
                                                    <!--<Label Name="PART_ElemFeatures" Content="{DynamicResource LOCFeaturesLabel}" />
                                                    <ItemsControl Name="PART_ItemsFeatures" />-->

                                                </GridEx>
                                            </Border>

                                        </StackPanel>
                                        <!--Details Panel Ends-->

                                        <!--Features-->
                                        <StackPanel Name="PART_ElemFeatures" Margin="0,0,0,32">
                                            <Label Content="{DynamicResource LOCFeaturesLabel}" FontWeight="Bold" FontSize="{DynamicResource FontSize}"/>
                                            <Border CornerRadius="{DynamicResource ControlCornerRadiusLarge}" 
                                                    Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">
                                                <StackPanel Margin="16,8,16,16">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Settings DetailsVisibility.Features}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Game.Features}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>

                                                    <ItemsControl ItemsSource="{Binding Game.Features}" Margin="0,8,0,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}" Margin="0,2,4,2"
                                                                        Style="{DynamicResource PropertyItemTagButton}"
                                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}" CommandParameter="{Binding}"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!--Features Ends-->

                                        <!--Tags-->
                                        <StackPanel Name="PART_ElemTags" Margin="0,0,0,32">
                                            <Label Margin="0,2,0,0" Content="{DynamicResource LOCTagsLabel}" FontWeight="Bold"
                                                   FontSize="{DynamicResource FontSize}"/>
                                            <Border CornerRadius="{DynamicResource ControlCornerRadius}" 
                                                    Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">
                                                <StackPanel Margin="16,8,16,16">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Settings DetailsVisibility.Tags}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Game.Tags}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>

                                                    <ItemsControl ItemsSource="{Binding Game.Tags}" Margin="0,8,0,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}" Margin="0,2,4,2"
                    Style="{DynamicResource PropertyItemTagButton}"
                    Command="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.SetFeatureFilterCommand}" CommandParameter="{Binding}"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        <!--Tags Ends-->

                                        <!--Ratings-->
                                        <StackPanel Margin="0,0,0,32">

                                            <Border CornerRadius="{DynamicResource ControlCornerRadius}" 
                                                    Style="{DynamicResource DetailViewCardBorder}" Margin="0,0,0,0">

                                                <Grid Margin="16,12,16,12">
                                                    <Grid.Resources>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontSize" Value="{StaticResource FontSizeSmaller}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource IdleBrush}"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontSize" Value="{StaticResource FontSizeLarge20}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource IdleBrush}"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </Grid.Resources>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <!--<Label Name="PART_ElemCommunityScore" Content="{DynamicResource LOCCommunityScore}"/>-->
                                                        <Label Content="{DynamicResource LOCCommunityScore}"/>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                                            <TextBlock Text="&#xe00a;" Style="{StaticResource IconFontStyle}" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Game.CommunityScore, TargetNullValue='- -', FallbackValue='- -'}"
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                            <!--<TextBlock Name="PART_TextCommunityScore" VerticalAlignment="Center" />-->
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1">
                                                        <!--<Label Name="PART_ElemCriticScore" Content="{DynamicResource LOCCriticScore}" />-->
                                                        <Label Content="{DynamicResource LOCCriticScore}" />
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="&#xe00a;" Style="{StaticResource IconFontStyle}" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Game.CriticScore, TargetNullValue='- -', FallbackValue='- -'}"
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                            <!--<TextBlock Name="PART_TextCriticScore" VerticalAlignment="Center" />-->
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2">
                                                        <!--<Label Name="PART_ElemUserScore" Content="{DynamicResource LOCUserScore}" />-->
                                                        <Label Content="{DynamicResource LOCUserScore}" />
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="&#xe00a;" Style="{StaticResource IconFontStyle}" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Game.UserScore, TargetNullValue='- -', FallbackValue='- -'}" 
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                            <!--<TextBlock Name="PART_TextUserScore" VerticalAlignment="Center" />-->
                                                        </StackPanel>
                                                    </StackPanel>

                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                        <!--Ratings Ends-->
                                        
                                        <!--Links-->
                                        <StackPanel Name="PART_ElemLinks" Margin="0,0,0,32">
                                            <TextBlock Text="{DynamicResource LOCLinksLabel}" Style="{DynamicResource BaseTextBlockStyle}" 
                                                       FontWeight="Bold" FontSize="14" />
                                            <Border CornerRadius="{DynamicResource ControlCornerRadius}" 
                                                    Style="{DynamicResource DetailViewCardBorder}" Margin="0,12,0,0">
                                                <ItemsControl ItemsSource="{Binding Game.Links}" Margin="10,12,10,8"
                                                              Visibility="{Binding ElementName=PART_ElemLinks, Path=Visibility}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type Link}">
                                                            <Button Content="{Binding Name}"
                                                                    Style="{StaticResource PropertyItemLinkButton}"
                                                                    ToolTip="{Binding Url}"
                                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.OpenLinkCommand}"
                                                                    CommandParameter="{Binding}"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Border>
