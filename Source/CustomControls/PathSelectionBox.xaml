<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type PathSelectionBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <DockPanel>
                        <Button x:Name="PART_ButtonDirectorySelect" DockPanel.Dock="Right" Margin="8,0,0,0"
                                Content="&#xe838;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                MaxHeight="{TemplateBinding ActualHeight}" 
                                ToolTip="{DynamicResource LOCSelectDirectoryTooltip}" />
                        <Button x:Name="PART_ButtonFileSelect" DockPanel.Dock="Right" Margin="8,0,0,0"
                                Content="&#xe130;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                MaxHeight="{TemplateBinding ActualHeight}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                ToolTip="{DynamicResource LOCSelectFileTitle}"/>
                        <Grid DockPanel.Dock="Left">
                            <Border x:Name="HoverBg" BorderThickness="0" CornerRadius="{StaticResource ControlCornerRadius}" Opacity="0.08"/>
                            <Border x:Name="SelectedBg" BorderThickness="1" Background="Transparent" CornerRadius="{StaticResource ControlCornerRadius}" Opacity="0"/>
                            <ScrollViewer x:Name="PART_ContentHost" VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"
                                    HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}" />

                        </Grid>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DarkControlBackgroundBrush}" TargetName="HoverBg" />
                            <Setter Property="BorderBrush" Value="{DynamicResource DarkControlBackgroundBrush}" TargetName="SelectedBg" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="False">
                            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" TargetName="HoverBg" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlBackgroundBrush}" TargetName="SelectedBg" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Opacity" Value="0.16" TargetName="HoverBg" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter Property="Opacity" Value="0.16" TargetName="SelectedBg" />
                            <Setter Property="Opacity" Value="0.16" TargetName="HoverBg" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>